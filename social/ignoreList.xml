<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

    <Button name="GwIgnoreRow" virtual="true">
        <Size x="460" y="32"/>
        <Frames>
            <Button parentKey="item" setAllPoints="true" hidden="true">
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture parentKey="zebra" file="Interface/AddOns/GW2_UI/textures/uistuff/gwstatusbar">
                            <Size x="32" y="32"/>
                            <Anchors>
                                <Anchor point="TOPLEFT" relativePoint="TOPLEFT"/>
                                <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                    <Layer textureSubLevel="2">
                        <FontString parentKey="name" text="Amount Could not be loaded" inherits="GameFontNormalSmall" justifyV="MIDDLE" justifyH="LEFT">
                            <Anchors>
                                <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="5" y="-5"/>
                            </Anchors>
                            <Size x="400" y="24"/>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <Button parentKey="remove" text="" hidden="false">
                        <Size x="28" y="28"/>
                        <Anchors>
                            <Anchor point="RIGHT" relativePoint="RIGHT" x="-10" y="0"/>
                        </Anchors>
                        <Layers>
                            <Layer level="ARTWORK">
                                <Texture parentKey="icon" file="Interface/BUTTONS/UI-GROUPLOOT-PASS-DOWN">
                                    <Size x="28" y="28"></Size>
                                    <Anchors>
                                        <Anchor point="CENTER"></Anchor>
                                    </Anchors>
                                </Texture>
                            </Layer>
                        </Layers>
                    </Button>
                </Frames>
            </Button>
        </Frames>
    </Button>

    <Frame name="GwIgnoreWindow" virtual="true" hidden ="false">
        <Size x="460" y="530"/>
        <Anchors>
            <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="13" y="-50"/>
        </Anchors>
        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="ignoreHeader" text="IGNORED" inherits="GameFontNormalSmall" justifyV="MIDDLE" justifyH="LEFT">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT" x="5" y="30"/>
                    </Anchors>
                    <Size x="100" y="24"/>
                </FontString>
                <Texture file="Interface\AddOns\GW2_UI\textures\character\item-selectbg">
                    <Size x="540" y="570"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="-3" y="7"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <Button name="$parentIgnore" parentKey="ignore" inherits="GwStandardButton" text="IGNORE">
                <Size x="100" y="30"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT" x="10" y="30"/>
                </Anchors>
            </Button>
            <ScrollFrame parentKey="IgnoreScroll" inherits="GwHybridScrollFrameTemplate">
                <Size x="460" y="530"></Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="-2" y="-10"></Anchor>
                </Anchors>
            </ScrollFrame>
        </Frames>
    </Frame>
</Ui>