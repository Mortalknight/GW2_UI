<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

    <Frame name="GwOrderhallBar" virtual="true">
        <Size x="100" y="32"></Size>
        <Anchors>
            <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="400" y="0"></Anchor>
        </Anchors>
        <Layers>
            <Layer>
                <FontString name="$parentCurrency" parentKey="currency" justifyH="LEFT" justifyV="MIDDLE">
                    <Size x="70" y="40"></Size>
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="LEFT" x="32" y="0"></Anchor>
                    </Anchors>

                </FontString>
                <Texture parentKey="currencyIcon" atlas="legionmission-icon-currency" useAtlasSize="false">
                    <Size x="24" y="24"></Size>
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="LEFT" x="0" y="0"></Anchor>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
    </Frame>

    <Frame name="GwOrderHallFollower" virtual="true">
        <Size x="100" y="32"></Size>
        <Anchors>
            <Anchor point="TOPLEFT"></Anchor>
        </Anchors>
        <Layers>
            <Layer>
                <FontString parentKey="Count" justifyH="LEFT" justifyV="MIDDLE">
                    <Size x="70" y="40"></Size>
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="LEFT" x="32" y="0"></Anchor>
                    </Anchors>

                </FontString>
                <Texture parentKey="Icon">
                    <Size x="35" y="18"></Size>
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="LEFT" x="0" y="0"></Anchor>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
    </Frame>

</Ui>