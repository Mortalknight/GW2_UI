    <Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

    <Frame name="GwPopupFrameTemplate" hidden="true" frameStrata="FULLSCREEN_DIALOG" enableMouse="true" topLevel="true" virtual="true">
        <Size x="350" y="1"/>
        <Layers>
            <Layer>
                <Texture parentKey="background" file="Interface/AddOns/GW2_UI/textures/party/manage-group-bg">
                    <Anchors>
                        <Anchor point="TOPLEFT"/>
                        <Anchor point="BOTTOMRIGHT"/>
                    </Anchors>
                    <TexCoords left="0.2" right="0.8" top="0.2" bottom="0.8" />
                    <Color r="0.8" g="0.8" b="0.8" a="0.9"/>
                </Texture>
            </Layer>
            <Layer textureSubLevel="2">
                <Texture parentKey="alertIcono" file="Interface/AddOns/GW2_UI/textures/icons/warning-icon">
                    <Size x="50" y="50"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="15" y="-15"/>
                    </Anchors>
                </Texture>
                <FontString parentKey="string" text="Not yet loaded" justifyH="LEFT" justifyV="TOP">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="75" y="-15"/>
                        <Anchor point="TOPRIGHT" x="-15" y="-15"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <EditBox hidden="true" parentKey="input" autoFocus="false">
                <Size x="1" y="20"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.string" relativePoint="BOTTOMLEFT" x="0" y="-15"/>
                    <Anchor point="TOPRIGHT" relativeKey="$parent.string" relativePoint="BOTTOMRIGHT" x="0" y="-15"/>
                </Anchors>
                <FontString inherits="ChatFontNormal" />
                <Layers>
                    <Layer>
                        <Texture parentKey="middle" file="Interface/AddOns/GW2_UI/textures/uistuff/statusbar">
                            <Anchors>
                                <Anchor point="TOPLEFT" x="-3" y="0"/>
                                <Anchor point="BOTTOMRIGHT"  x="3" y="0"/>
                            </Anchors>
                        </Texture>
                        <Texture parentKey="left" file="Interface/AddOns/GW2_UI/textures/uistuff/statusbarBorderPixelVertical">
                            <Anchors>
                                <Anchor point="TOPLEFT" x="-3" y="0"/>
                                <Anchor point="BOTTOMLEFT" x="-3" y="0"/>
                            </Anchors>
                            <TexCoords left="0" right="1" top="1" bottom="0" />
                        </Texture>
                        <Texture parentKey="right" file="Interface/AddOns/GW2_UI/textures/uistuff/statusbarBorderPixelVertical">
                            <Anchors>
                                <Anchor point="TOPRIGHT" x="3" y="0"/>
                                <Anchor point="BOTTOMRIGHT" x="3" y="0"/>
                            </Anchors>
                        </Texture>
                        <Texture parentKey="top" file="Interface/AddOns/GW2_UI/textures/uistuff/statusbarBorderPixel">
                            <Anchors>
                                <Anchor point="BOTTOMLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="-3" y="0"/>
                                <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="TOPRIGHT" x="3" y="0"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
            </EditBox>
            <Button inherits="GwStandardButton" text="ACCEPT" parentKey="acceptButton">
                <Size x="85" y="20" />
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeKey="$parent.input" relativePoint="BOTTOMRIGHT" x="-95" y="-15"/>
                </Anchors>
            </Button>
            <Button inherits="GwStandardButton" text="CANCEL" parentKey="cancelButton">
                <Size x="85" y="20" />
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeKey="$parent.input" relativePoint="BOTTOMRIGHT" x="0" y="-15"/>
                </Anchors>
            </Button>
        </Frames>
    </Frame>
</Ui>