<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <Button name="GwBuffIconBig" frameStrata="LOW" toplevel="true" virtual="true">
        <Size x="26" y="26"/>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="backdrop" file="Interface\AddOns\GW2_UI\textures\spelliconempty">
                    <Size x="26" y="26"/>

                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="0" y="0"/>
                        <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="0" y="0"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer>
                <Texture name="$parentBuffIcon" file="Interface\AddOns\GW2_UI\textures\gwstatusbar">
                    <Size x="24" y="24"/>
                    <TexCoords left="0.1" right="0.9" top="0.1" bottom="0.9" />

                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="1" y="-1"/>
                        <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="-1" y="1"/>
                    </Anchors>
                </Texture>
                <FontString name="$parentBuffDuration" fontSize="14" text="unknown" fontColor="white" inherits="GameFontNormalSmall" justifyH="CENTER">
                    <Size x="32" y="12"/>
                    <Anchors>
                        <Anchor point="BOTTOM" x="0" y="-12"/>
                    </Anchors>
                </FontString>
                <FontString name="$parentBuffStacks" fontSize="14" text="unknown" fontColor="white" inherits="GameFontNormalSmall" justifyH="CENTER">
                    <Size x="32" y="32"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="0" y="0"/>
                        <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="0" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

    </Button>
</Ui>
