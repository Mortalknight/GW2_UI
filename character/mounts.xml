<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

    <Frame name="GwMountsFrame" enableMouse="true" inherits="SecureHandlerStateTemplate,SecureHandlerBaseTemplate" protected="true" virtual="true">
        <Size x="853" y="627"/>
        <Anchors>
            <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="0" y="0"/>
        </Anchors>
        <Layers>
            <Layer level="BORDER">
                <Texture file="Interface\AddOns\GW2_UI\textures\character\windowbg-brushed">
                    <Size x="853" y="853"></Size>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="0" y="0"></Anchor>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <FontString parentKey="title" text="Passive" justifyH="CENTER" justifyV="MIDDLE">
                    <Size x="612" y="32"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="241" y="-20"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>

          <PlayerModel name="PaperDoll3dModel" inherits="ModelWithZoomTemplate ModelTemplate" enableMouse="true" parentKey="model">
              <Size x="612" y="598"></Size>
              <Anchors>
                  <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="241" y="0"></Anchor>

              </Anchors>
              <Scripts>
                  <OnLoad>

                      Model_OnLoad(self, 4, -0.5, 0, CharacterModelFrame_OnMouseUp)
                  </OnLoad>
              </Scripts>

          </PlayerModel>

        </Frames>
    </Frame>

    <Button name="GwMountSummonButton"  enableMouse="true"  inherits="GwStandardButton,SecureActionButtonTemplate" virtual="true" text="Summon">
        <Size x="200" y="48" />
        <Anchors>
            <Anchor point="BOTTOM" relativePoint="BOTTOM" x="120" y="40"/>
        </Anchors>
    </Button>

    <Frame name="GwMountsList" inherits="SecureHandlerAttributeTemplate" virtual="true">
        <Size x="241" y="621"/>
        <Anchors>
            <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="0" y="-10"/>
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND" textureSubLevel="-2">
                <Texture file="Interface\AddOns\GW2_UI\textures\talents\spellbookmenu_background">
                    <Size x="241" y="512"/>
                    <Color r="1" g="1" b="1" a="1"></Color>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="0" y="8"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="BORDER">
                <FontString parentKey="pages" text="0" justifyH="LEFT" justifyV="MIDDLE">
                    <Anchors>
                        <Anchor point="BOTTOM" relativePoint="BOTTOM"  x="0" y="10"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
          <Frame parentKey="attrDummy" inherits="SecureHandlerAttributeTemplate">
          </Frame>
          <Frame name="$parentcontainer1" parentKey="container1" inherits="SecureHandlerShowHideTemplate" enableMouse="false" hidden="false">
            <Size x="241" y="621"/>
            <Anchors>
                <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="0" y="0" />
            </Anchors>
            <Scripts>
                <OnShow>
                    self:GetParent().pages:SetText(1)
                </OnShow>
            </Scripts>
          </Frame>

          <Frame name="$parentcontainer2" parentKey="container2" inherits="SecureHandlerShowHideTemplate" enableMouse="false" hidden="true">
            <Size x="241" y="621"/>
            <Anchors>
                <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="0" y="0" />
            </Anchors>
            <Scripts>
                <OnShow>
                    self:GetParent().pages:SetText(2)
                </OnShow>
            </Scripts>
          </Frame>

          <Frame name="$parentcontainer3" parentKey="container3" inherits="SecureHandlerShowHideTemplate" enableMouse="false" hidden="true">
            <Size x="241" y="621"/>
            <Anchors>
                <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="0" y="0" />
            </Anchors>
            <Scripts>
                <OnShow>
                    self:GetParent().pages:SetText(3)
                </OnShow>
            </Scripts>
          </Frame>

          <Frame name="$parentcontainer4" parentKey="container4" inherits="SecureHandlerShowHideTemplate" enableMouse="false" hidden="true">
            <Size x="241" y="621"/>
            <Anchors>
                <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="0" y="0" />
            </Anchors>
            <Scripts>
                <OnShow>
                    self:GetParent().pages:SetText(4)
                </OnShow>
            </Scripts>
          </Frame>
          <Button parentKey="left" enableMouse="true" inherits="SecureHandlerClickTemplate,SecureHandlerShowHideTemplate,SecureHandlerStateTemplate"  >
              <size x="32" y="32"/>
              <Anchors>
                  <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOM"  x="-30" y="5" />
              </Anchors>
              <Layers>
                  <Layer level="OVERLAY" textureSubLevel="8">
                      <Texture file="Interface\AddOns\GW2_UI\textures\character\backicon">
                          <Size x="32" y="32"></Size>
                          <Anchors>
                              <Anchor point="LEFT" relativePoint="LEFT"></Anchor>
                          </Anchors>
                      </Texture>
                  </Layer>
              </Layers>
          </Button>
          <Button parentKey="right" enableMouse="true" inherits="SecureHandlerClickTemplate,SecureHandlerShowHideTemplate,SecureHandlerStateTemplate"  >
              <size x="32" y="32"/>
              <Anchors>
                  <Anchor point="BOTTOMLEFT" relativePoint="BOTTOM"  x="30" y="5" />
              </Anchors>
              <Layers>
                  <Layer level="OVERLAY" textureSubLevel="8">
                      <Texture file="Interface\AddOns\GW2_UI\textures\character\forwardicon">
                          <Size x="32" y="32"></Size>
                          <Anchors>
                              <Anchor point="LEFT" relativePoint="LEFT"></Anchor>
                          </Anchors>
                      </Texture>
                  </Layer>
              </Layers>
          </Button>
        </Frames>
    </Frame>

    <Button name="GwMountsListItem" inherits="GwCharacterMenuBlank,SecureActionButtonTemplate,SecureHandlerDragTemplate"  enableMouse="true" virtual="true" >
        <Size x="231" y="44"/>
        <Anchors>
            <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="0" y="0"/>
        </Anchors>
        <RelInset left="0.2" right="-0.2" top="0.2" bottom="0"/>
        <Layers>
            <Layer level="BACKGROUND" >
                <Texture parentKey="bg" file="Interface\AddOns\GW2_UI\textures\character\menu-bg">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="0" y="0"/>
                        <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="0" y="0"/>
                    </Anchors>
                </Texture>
                <Texture parentKey="bgstatic" file="Interface\AddOns\GW2_UI\textures\character\menu-bg">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="0" y="0"/>
                        <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="0" y="0"/>
                    </Anchors>
                </Texture>
                <Texture parentKey="background" alphaMode="ADD" file="Interface\AddOns\GW2_UI\textures\button_hover" hidden="true">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="0" y="0"/>
                            <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="0" y="0"/>
                    </Anchors>
                    <Color r="1" g="1" b="0.6" a="0.1"/>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <Texture parentkey="icon" file="Interface\AddOns\GW2_UI\textures\levelreward-icon">
                    <Size x="32" y="32"/>
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="LEFT" x="10" y="0"/>
                    </Anchors>
                    <TexCoords left="0.1" right="0.9" top="0.1" bottom="0.9" />
                </Texture>
                <FontString parentKey="title" text="Unknown" justifyH="LEFT" justifyV="MIDDLE">
                    <Size x="32" y="32"/>
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="RIGHT" relativeKey="$parent.icon" x="5" y="0"/>
                        <Anchor point="RIGHT" relativePoint="RIGHT" x="5" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
          <OnDragStart>
              if InCombatLockdown() then return end

              PickupCompanion(self.petType,self.mountID)
          </OnDragStart>
        </Scripts>
    </Button>

</Ui>
