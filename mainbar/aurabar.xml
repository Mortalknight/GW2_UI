<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

    <Button name="GwAuraTmpl" registerForClicks="RightButtonUp" virtual="true">
        <Size x="32" y="32"></Size>
        <Frames>
            <Frame parentKey="border" frameLevel="1">
                <Anchors>
                    <Anchor point="TOPLEFT" x="2" y="-4"/>
                    <Anchor point="BOTTOMRIGHT" x="-2" y="0"/>
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture file="Interface/AddOns/GW2_UI/textures/gwstatusbar">
                            <Color r="0" g="0" b="0"/>
                        </Texture>
                    </Layer>
                    <Layer level="BORDER">
                        <Texture parentKey="inner" file="Interface/AddOns/GW2_UI/textures/gwstatusbar" alpha="0.75">
                            <Color r="0" g="0" b="0"/>
                            <Anchors>
                                <Anchor point="TOPLEFT" x="1" y="-1"/>
                                <Anchor point="BOTTOMRIGHT" x="-1" y="1"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
            </Frame>
            <Cooldown parentKey="cooldown" setAllPoints="false" inherits="CooldownFrameTemplate" frameLevel="2">
                <Anchors>
                    <Anchor point="TOPLEFT" x="2" y="-2"/>
                    <Anchor point="BOTTOMRIGHT" x="-2" y="2"/>
                </Anchors>
                <SwipeTexture>
                    <Color r="1" g="1" b="1" a="1"/>
                </SwipeTexture>
            </Cooldown>
            <Frame parentKey="status" frameLevel="3">
                <Anchors>
                    <Anchor point="TOPLEFT" x="4" y="-6"/>
                    <Anchor point="BOTTOMRIGHT" x="-4" y="2"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture parentKey="icon" file="Interface/AddOns/GW2_UI/textures/gwstatusbar">
                            <TexCoords left="0.05" right="0.95" top="0.05" bottom="0.95"/>
                        </Texture>
                    </Layer>
                    <Layer level="OVERLAY">
                        <Texture file="Interface/AddOns/GW2_UI/textures/icon-overlay"/>
                        <FontString parentKey="stacks" text="20" justifyH="CENTER" justifyV="BOTTOM">
                            <Anchors>
                                <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" x="1" y="15"/>
                                <Anchor point="BOTTOMRIGHT" x="-1" y="0"/>
                            </Anchors>
                        </FontString>
                        <FontString parentKey="duration" text="0.00" justifyH="CENTER" justifyV="TOP">
                            <Size x="32" y="13"/>
                            <Anchors>
                                <Anchor point="TOP" relativePoint="BOTTOM" x="0" y="-4"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
        </Frames>
        <Scripts>
            <OnLoad>GwAuraTmpl_OnLoad(self)</OnLoad>
        </Scripts>
    </Button>

    <Button name="GwAuraSecureTmpl" inherits="SecureActionButtonTemplate,GwAuraTmpl" virtual="true">
        <Attributes>
            <Attribute name="type2" value="cancelaura"/>
        </Attributes>
    </Button>

</Ui>
